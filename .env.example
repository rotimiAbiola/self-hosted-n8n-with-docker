# Copy this file to .env and update with your actual values

# Domain Configuration
# DOMAIN_NAME and SUBDOMAIN together determine where n8n will be reachable from
DOMAIN_NAME=your-domain.com
SUBDOMAIN=n8n
# Example: https://n8n.your-domain.com

# Timezone Configuration
# Used by Cron and other scheduling nodes
TZ=America/New_York
GENERIC_TIMEZONE=America/New_York

# SSL/TLS Configuration (for production Let's Encrypt)
SSL_EMAIL=admin@your-domain.com

# PostgreSQL Database
POSTGRES_PASSWORD=your-secure-password-here

# Watchtower Auto-Update Email Notifications (optional)
# Leave empty to disable email notifications
WATCHTOWER_NOTIFICATION_EMAIL_FROM=your-email@gmail.com
WATCHTOWER_NOTIFICATION_EMAIL_TO=your-email@gmail.com
WATCHTOWER_NOTIFICATION_EMAIL_SERVER=smtp.gmail.com
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PORT=587
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_USER=your-email@gmail.com
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PASSWORD=your-app-password-here

# Alternative Watchtower email variable names (legacy compatibility)
WATCHTOWER_EMAIL_FROM=watchtower@your-domain.com
WATCHTOWER_EMAIL_TO=admin@your-domain.com
WATCHTOWER_EMAIL_SERVER=smtp.gmail.com
WATCHTOWER_EMAIL_PORT=587
WATCHTOWER_EMAIL_USER=your-email@gmail.com
WATCHTOWER_EMAIL_PASSWORD=your-gmail-app-password

# Example values:
# DOMAIN_NAME=mydomain.local
# SUBDOMAIN=n8n
# TZ=America/New_York
# POSTGRES_PASSWORD=MySecurePassword123!
# SSL_EMAIL=admin@mydomain.local
# WATCHTOWER_NOTIFICATION_EMAIL_FROM=alerts@mydomain.com
# WATCHTOWER_NOTIFICATION_EMAIL_TO=admin@mydomain.com